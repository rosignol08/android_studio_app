<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État lorsque le bouton est pressé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE"/> <!-- Couleur violette -->
        </shape>
    </item>

    <!-- État par défaut -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6200EE"/> <!-- Couleur plus claire -->
            <corners android:radius="8dp"/> <!-- Coins arrondis -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Bordure blanche -->
        </shape>
    </item>
</selector>
