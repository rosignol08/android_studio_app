<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- ImageView pour afficher le GIF (occupant un tiers de l'écran) -->
    <ImageView
        android:id="@+id/gif_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/base_video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.33" /> <!-- Prendre 1/3 de la hauteur de l'écran -->

    <!-- GridLayout pour les boutons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:rowCount="4"
        android:columnCount="3"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gif_imageView"
        app:layout_constraintHeight_percent="0.66"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp">

        <!-- Boutons pour jouer des sons -->

        <Button
            android:id="@+id/button_sound1"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Ma gueule" />

        <Button
            android:id="@+id/button_sound2"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Huraken" />

        <Button
            android:id="@+id/button_sound3"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Salut" />

        <Button
            android:id="@+id/button_sound4"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Bonjour" />
        <Button
            android:id="@+id/button_sound5"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Toucher" />
        <Button
            android:id="@+id/button_sound6"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Truquée" />
        <Button
            android:id="@+id/button_sound7"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Vraiment" />
        <Button
            android:id="@+id/button_sound8"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Vraiment ??" />
        <Button
            android:id="@+id/button_sound9"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Une fois" />
        <Button
            android:id="@+id/button_sound10"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Vraiment 2" />
        <Button
            android:id="@+id/button_sound11"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Moquez" />
        <Button
            android:id="@+id/button_sound12"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Plonger" />
        <Button
            android:id="@+id/button_sound13"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Quoi ma gueule" />
        <Button
            android:id="@+id/button_sound14"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Reverse" />
        <Button
            android:id="@+id/button_sound15"
            android:layout_width="19mm"
            android:layout_height="10mm"
            android:layout_margin="5dp"
            android:text="Bonjour" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>