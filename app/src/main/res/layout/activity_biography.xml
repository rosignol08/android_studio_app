<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:paddingHorizontal="14dp"
        android:paddingTop="14dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="noScroll">

            <!-- Images avec contentDescription -->
            <ImageView
                android:id="@+id/image_johnny_jeune"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/johnny_jeune"
                android:contentDescription="Johnny Hallyday jeune"
                android:fitsSystemWindows="true"/>

            <ImageView
                android:id="@+id/image_johnny_halliday_tete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0"
                android:src="@drawable/johnny_hallyday_tete"
                android:contentDescription="Johnny Hallyday d'âge moyen"
                android:fitsSystemWindows="true"/>

            <ImageView
                android:id="@+id/image_johnny_vieux"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0"
                android:src="@drawable/johnny_vieux"
                android:contentDescription="Johnny Hallyday plus âgé"
                android:fitsSystemWindows="true"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/johnny_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="@android:color/white"
            app:layout_scrollFlags="noScroll"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_jeunesse_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_jeunesse_text"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <!-- Section Succès -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_succes_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_succes_text"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <!-- Section Scène -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_scene_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_scene_text"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <!-- Section Vie Personnelle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_vie_perso_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_vie_perso_text"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <!-- Section Héritage -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_heritage_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_heritage_text"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Citation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/johnny_citation"
                android:textSize="18sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="16dp"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>